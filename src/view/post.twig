{% extends "base.twig" %}

{% block content %}

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

                <div class="post-preview">
                    <a href="post/{{ onePost.id }}">
                        je suis un numéro id:{{onePost.id}}
                        <h2 class="post-title">
                            {{ onePost.titre }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ onePost.contenu | truncate(40) }}
                        </h3>
                    </a>
                    <p class="post-meta">Posté le {{ onePost.date_creation | date('d/m/Y', 'Europe/Paris') }}</p>
                </div>
            <div class="clearfix"><a class="btn btn-primary float-right" href="#">Posts précédents &rarr;</a></div>
        </div>
    </div>

{% endblock %}